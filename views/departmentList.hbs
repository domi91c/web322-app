<div class="row">
    <div class="col-md-12">
        <h1>{{title}}
            <a href="/departments/add"
               class="btn btn-success float-right"
               style="margin-top:5px;">
                Add New Department
            </a>
        </h1>
        <hr/>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Department Number</th>
                    <th>Derpartment Name</th>
                </tr>
                </thead>
                <tbody>
                {{#each data}}
                    <tr>
                        <td><a href="/department/{{departmentId}}">{{departmentId}}</a></td>
                        <td>{{departmentName}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>